extends layout

block content
    h2= title

    table.table
        thead
            tr
                th Ranking
                th Rank Order
                th Name
                th Reviews
                th Average Rating
        tbody
            each store, index in stores
                tr
                    //- elementA: elementB means nest B inside A on same line
                    td: a(href=`/stores/${store.slug}`) 
                        img(width=200 src=`/uploads/${store.photo || 'store.png'}` alt=store.name)
                    td= index + 1
                    td: a(href=`/stores/${store.slug}`) #{store.name}
                    td= store.reviews.length
                    - const average = store.averageRating.toFixed(2)
                    td #{average} / 5
